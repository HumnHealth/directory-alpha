                </div>
                <div class="form-group">
                    <%= f.text_area :message, :class => 'form-control', :placeholder => 'Message', :type => 'text' %>
                </div>
                <%= f.hidden_field(:context, onchange: "alert('Input collected!')", id: "context") %>
